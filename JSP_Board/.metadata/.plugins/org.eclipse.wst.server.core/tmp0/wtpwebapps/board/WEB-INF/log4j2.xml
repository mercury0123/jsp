<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">	<!-- 위 설명 참고 -->
<Appenders>						<!-- 로그가 출력되는 위치를 설정 -->
	<Console name="Console" target="SYSTEM_OUT">
		<PatternLayout pattern="%d - %msg%n" />	<!-- 시간날짜 - 내용 - 줄변환  -->
	</Console>
</Appenders>	
<Loggers>
	<Root level="INFO">
		<AppenderRef ref="Console" />
	</Root>
</Loggers>
</Configuration>